<!DOCTYPE html>
<html>
<head>
    <title>Gráfico de Plantas por Categoría</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
   

</head>
<body>
    <h2>Distribución de Plantas por Categoría</h2>
    <canvas id="chart" width="400" height="400"></canvas>

    <script>
        fetch('/chart-data')
            .then(response => response.json())
            .then(data => {
                const categorias = data.map(item => item.categoria);
                const cantidades = data.map(item => item.cantidad);

                const colors = ['#4CAF50', '#FF9800', '#03A9F4', '#E91E63', '#9C27B0'];

                const ctx = document.getElementById('chart').getContext('2d');
                new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: categorias,
                        datasets: [{
                            label: 'Plantas por Categoría',
                            data: cantidades,
                            backgroundColor: colors
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'right'
                            }
                        }
                    }
                });
            });
    </script>
</body>
</html>
