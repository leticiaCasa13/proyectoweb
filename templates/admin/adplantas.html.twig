<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Administrar Plantas</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  >

  <!-- Bootstrap Icons -->
  <link 
    rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
  >
</head>
<body>

  <div class="container mt-5">
  <!-- Encabezado -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-secondary mb-5">ðŸ“‹ Listado de Plantas</h1>
    <a href="/admin/planta/nueva" class="btn btn-success">
      <i class="bi bi-plus-lg"></i> AÃ±adir Planta
    </a>
  </div>

    <!-- Tabla de plantas -->
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>DescripciÃ³n</th>
            <th>Precio</th>
            <th>CategorÃ­a</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {% for planta in plantas %}
            <tr>
              <td>{{ planta.id }}</td>
              <td>{{ planta.nombre }}</td>
              <td>
                <img 
                  src="/public/assets/images/{{ planta.imagen_url }}" 
                  alt="{{ planta.nombre }}" 
                  width="60" 
                  class="rounded"
                >
              </td>
              <td class="text-truncate" style="max-width: 200px;">
                {{ planta.descripcion }}
              </td>
              <td>â‚¬ {{ planta.precio|number_format(2, ',', '.') }}</td>
              <td>{{ planta.categoria }}</td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <a 
                    href="/admin/planta/editar/{{ planta.id }}" 
                    class="btn btn-sm btn-outline-primary" 
                    title="Editar"
                  >
                    <i class="bi bi-pencil"></i>
                  </a>
                  <form 
                    action="/admin/planta/eliminar/{{ planta.id }}" 
                    method="POST" 
                    onsubmit="return confirm('Â¿Eliminar esta planta?');"
                    style="display:inline;"
                  >
                    <button 
                      type="submit" 
                      class="btn btn-sm btn-outline-danger" 
                      title="Eliminar"
                    >
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="7" class="text-center py-4">
                No hay plantas registradas.
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  ></script>
</body>
</html>
